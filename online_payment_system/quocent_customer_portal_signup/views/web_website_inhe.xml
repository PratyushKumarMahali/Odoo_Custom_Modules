<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<odoo>
	
	<template id="copyright_name_inherit" inherit_id="website.layout">
		<xpath expr="//footer//span[hasclass('o_footer_copyright_name')]" position="replace">
			<span class="o_footer_copyright_name mr-2">Copyright &#169; Quocent</span>
		</xpath>
	</template>
	
	<template id="brand_promotion_inherit" inherit_id="web.brand_promotion">
		<xpath expr="//div[hasclass('o_brand_promotion')]" position="replace">
			<span class="o_footer_copyright_name mr-2">Powered by</span>
			<a target="_blank" t-attf-href="https://quocent.com/" class="badge badge-light">
				<img src="/quocent_customer_portal_signup/static/img/quocent_logo.png" style="height: 25px;" />
			</a>
		</xpath>
	</template>
	
</odoo>