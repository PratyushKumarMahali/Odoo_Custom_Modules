<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="qcent_login_otp_email.verify_otp_template" name="Login">
        <t t-call="web.login_layout">
            <t t-if="not wrong_login and not otp_expire">                
                <form style="max-width: 300px;position: relative;margin: 50px auto;" role="form" t-attf-action="/web/verify/otp" method="post">
	                <div class="alert alert-primary" role="alert">
	                   An OTP has sent to your email. Please enter it and login.
	                </div>
                	<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
	                <div class="form-group field-login">
	                    <label for="otp">Enter OTP</label>
	                    <input type="text" placeholder="OTP" name="otp" t-att-value="otp" id="otp" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
	                </div>
	                <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
	                    <button type="submit" class="btn btn-primary btn-block">Verify OTP</button>
	                    <div class="o_login_auth"/>
	                </div>
	                <input type="hidden" name="uid" t-att-value="uid"/>
	                <input type="hidden" name="db" t-att-value="db"/>
	                <input type="hidden" name="login" t-att-value="login"/>
	                <input type="hidden" name="passwd" t-att-value="passwd"/>
	                <input type="hidden" name="redirect" t-att-value="redirect"/>
            	</form>
            </t>
			<t t-if="wrong_otp">
                <div class="alert alert-danger" role="alert">
                	The OTP you entered was wrong.
                </div>
            </t>
            <t t-if="otp_expire">
                <div class="alert alert-danger" role="alert">
                	Entered OTP is expired. Please log in again and generate new OTP.
                    <a href="/web/login" >Redirect me to login page</a>
                </div>
            </t>
            <t t-if="wrong_login">
                <div class="alert alert-danger" role="alert">
                    Wrong login or password.
                    <a href="/web/login" >Redirect me to login page</a>
                </div>
            </t>
        </t>
    </template>
</odoo>